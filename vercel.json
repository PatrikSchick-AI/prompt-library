{
  "buildCommand": "cd prompt-library-app && npm run build",
  "outputDirectory": "prompt-library-app/dist",
  "installCommand": "cd prompt-library-app && npm install",
  "framework": "vite",
  "functions": {
    "prompt-library-app/api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/prompt-library-app/api/:path*"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, X-Admin-Key"
        }
      ]
    }
  ]
}
